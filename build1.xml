<?xml version="1.0" encoding="UTF-8"?>
<project name="javasdk" default="all">
  
  
  <property file="build1.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.base64-2.3.8.classpath">
    <pathelement location="${basedir}/src/com/kayako/api/tpl/base64-2.3.8.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module JavaSDK -->
  
  <dirname property="module.javasdk.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.javasdk" value="${compiler.args}"/>
  
  <property name="javasdk.output.dir" value="${module.javasdk.basedir}/out/production/JavaSDK"/>
  <property name="javasdk.testoutput.dir" value="${module.javasdk.basedir}/out/test/JavaSDK"/>
  
  <path id="javasdk.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javasdk.module.production.classpath">
    <path refid="library.base64-2.3.8.classpath"/>
  </path>
  
  <path id="javasdk.runtime.production.module.classpath">
    <pathelement location="${javasdk.output.dir}"/>
    <path refid="library.base64-2.3.8.classpath"/>
  </path>
  
  <path id="javasdk.module.classpath">
    <pathelement location="${javasdk.output.dir}"/>
    <path refid="library.base64-2.3.8.classpath"/>
  </path>
  
  <path id="javasdk.runtime.module.classpath">
    <pathelement location="${javasdk.testoutput.dir}"/>
    <pathelement location="${javasdk.output.dir}"/>
    <path refid="library.base64-2.3.8.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javasdk">
    <patternset refid="ignored.files"/>
    <exclude name="Doc/**"/>
    <exclude name=".idea/**"/>
    <exclude name="out/**"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javasdk">
    <patternset refid="excluded.from.module.javasdk"/>
  </patternset>
  
  <path id="javasdk.module.sourcepath">
    <dirset dir="${module.javasdk.basedir}/../../workspace">
      <include name="JavaSDK"/>
      <include name="JavaSDK/src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javasdk" depends="compile.module.javasdk.production,compile.module.javasdk.tests" description="Compile module JavaSDK"/>
  
  <target name="compile.module.javasdk.production" description="Compile module JavaSDK; production classes">
    <mkdir dir="${javasdk.output.dir}"/>
    <javac destdir="${javasdk.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.javasdk}"/>
      <bootclasspath refid="javasdk.module.bootclasspath"/>
      <classpath refid="javasdk.module.production.classpath"/>
      <src refid="javasdk.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javasdk"/>
    </javac>
    
    <copy todir="${javasdk.output.dir}">
      <fileset dir="${module.javasdk.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.javasdk.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javasdk.tests" depends="compile.module.javasdk.production" description="compile module JavaSDK; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javasdk" description="cleanup module">
    <delete dir="${javasdk.output.dir}"/>
    <delete dir="${javasdk.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javasdk" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javasdk" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>